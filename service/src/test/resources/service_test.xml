<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">


    <bean id="namedParameterJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="tourDao" class="com.aderenchuk.brest.dao.jdbc.TourDaoJdbc">
        <constructor-arg ref="namedParameterJdbcTemplate"/>
    </bean>

    <bean id="tourDtoDao" class="com.aderenchuk.brest.dao.jdbc.TourDtoDaoJdbc">
        <constructor-arg ref="namedParameterJdbcTemplate"/>
    </bean>

    <bean id="tourService" class="com.aderenchuk.brest.service.impl.TourServiceImpl">
        <constructor-arg name="tourDao" ref="tourDao"/>
    </bean>

    <bean id="tourDtoService" class="com.aderenchuk.brest.service.impl.TourDtoServiceImpl">
        <constructor-arg name="tourDtoDao" ref="tourDtoDao"/>
    </bean>



</beans>